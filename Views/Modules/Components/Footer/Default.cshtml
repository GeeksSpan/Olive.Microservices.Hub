@model ViewModel.Footer
@(Layout = null)

<!-- «Start| Footer» -->
<form data-module="Footer" method="post" action="@Url.Current()" class="logout-box">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
    <div class="d-inline-block">
        <a  href="/person/@Model.Email">
            <img src="@Model.UserImage" alt="@User?.Identity.Name" class="sidebar-top-module-profile">
        </a>
    </div>
    <div class="sidebar-top-module-profile-text">
        Hi <a href="/person/@Model.Email">@User?.Identity.Name</a><br />
        <a name="SignOut" href="/logout" default-button="true">Sign out</a>
        @Html.RenderHeaderButtons().Raw()
    </div>
</form>
<!-- «End| Footer» -->

